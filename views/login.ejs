<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Optional JavaScript - ->
    <!- jQuery first, then Popper.js, then Bootstrap JS -->
    <link href="css/login.css" type="text/css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  
    <title> AskBen: Login</title>

  </head>

  <body>

    <div class="container-fluid bg">
      <div class="row justify-content-center">

        <div class="col-md-4 col-sm-4 col-xs-12"> </div>
        
        <div class="col-md-4 col-sm-4 col-xs-12">
          <form class="form-container" method="post" action="/login">
            <div class="row justify-content-center">
              <img src="/assets/shield.svg" id = "shield"></img>
            </div>

            <div class="form-group small_text">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email">
            </div>

            <div class="form-group small_text">
              <label for="exampleInputPassword1">Password</label>
              <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" name="password">
            </div>

            <div class="row justify-content-center login">
              <button type="submit" class="btn btn-block btn-primary">Login</button>
            </div>

            <div class="small_text" style="margin-bottom: 40px; margin-top: 20px;">
              <label>Not an existing user?</label>
              <a href="/signup">Create a new account</a>
            </div>
              
            <div class="small_text" style="margin-bottom: 40px; margin-top: 20px;">
              <label>Forgot your password?</label>
              <a href="/forgotPass">Reset your password</a>
            </div>
          </form>

          <form method="get" action="/facebook">
            <button class="loginBtn loginBtn--facebook" type="submit" style="position: absolute; top: 555px; left: 62px;">
              Continue with Facebook
            </button>
          </form>
        </div>

        
      
        <div class="col-md-4 col-sm-4 col-xs-12"> </div>
        </div>
      </div>
    </div>
  


    <script>
      console.log("here"); 
      var userExists = <%= userExists %>;
      var wrongPassword = <%= wrongPassword %>;

      if (userExists || wrongPassword) {
        console.log('User exists: ' + userExists);
        console.log('Wrong Password: ' + wrongPassword);
        document.getElementById('exampleInputEmail1').style.borderColor = 'red';
        document.getElementById('exampleInputPassword1').style.borderColor = 'red';
      }              
    </script>

    
  </body>
</html>