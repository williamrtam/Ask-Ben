    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <title>AskBen: Sign Up</title>
    
  </head>

  <body>    

    <div class="container-fluid bg"> 
      

      <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-12"> 
        </div>

        <div class="col-md-4 col-sm-4 col-xs-12">
          <form class="form-container" action="/signup" method="post" onsubmit="return checkEmptyFields()">

            <img src="/assets/upennShield.png" id = "shield"> </img>

            <div class="form-group">
              <label for="inputUsername">Username</label>
              <input type="text" class="form-control" id="inputUsername" placeholder="Username" name="username">
            </div>

            <div class="form-group">
              <label for="inputEmail">Email address</label>
              <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter email" name="email">
            </div>

            <div class="form-group">
              <label for="inputPassword">Password</label>
              <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password">
            </div>

            <button id = "signupBtn" type="submit" class="btn btn-block btn-primary signup"> Sign Up </button>

            <h6 id="incorrectInfo" class="form-text errorMessage"> </h6>

                    
          </form>
         </div>
        
        <div class="col-md-4 col-sm-4 col-xs-12"> </div>
      </div>

      <script>

        function checkUserExists() {
          var userExists = <%= userExists %>;
            if (userExists) {
              document.getElementById("incorrectInfo").innerHTML = "User with email already exists. Please try another email or login from the home page.";
              document.getElementById('inputEmail').style.borderColor = 'red';
            }
        }  
              
        checkUserExists(); 
        
        function checkEmptyFields() {
          var username = document.getElementById('inputUsername').value;
          var email = document.getElementById('inputEmail').value;
          var password = document.getElementById('inputPassword').value;
                   
          if (username == "" || email == "" || password == "") {
            if (username == "") {
               document.getElementById('inputUsername').style.borderColor = 'red';
            } 

            if (email == "") {
              document.getElementById('inputEmail').style.borderColor = 'red';
            } 

            if (password == "") {
              document.getElementById('inputPassword').style.borderColor = 'red';
            }
            document.getElementById("incorrectInfo").innerHTML = "Please fill in all of the fields.";

            return false;                    
          } else {
            return true;
          }               
        }      
      </script>

    </div>>
   
  </body>
  

</html>